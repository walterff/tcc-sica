<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bdleite</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.show_sql">true</property>
    <mapping resource="projetotcc/tabelas/Tblleite.hbm.xml"/>
    <mapping resource="projetotcc/tabelas/Tblitensvendas.hbm.xml"/>
    <mapping resource="projetotcc/tabelas/Tblanimais.hbm.xml"/>
    <mapping resource="projetotcc/tabelas/Tblprodutos.hbm.xml"/>
    <mapping resource="projetotcc/tabelas/Tblclientes.hbm.xml"/>
    <mapping resource="projetotcc/tabelas/Tblvacinas.hbm.xml"/>
    <mapping resource="projetotcc/tabelas/Tblvendas.hbm.xml"/>
    <mapping resource="projetotcc/tabelas/Tblitensvacinas.hbm.xml"/>
    <mapping resource="projetotcc/tabelas/Tblcontasrecebe.hbm.xml"/>
    <mapping resource="projetotcc/tabelas/Tbltema.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
